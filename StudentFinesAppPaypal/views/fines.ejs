<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Outstanding Fines</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous">
  <script src="https://www.paypal.com/sdk/js?client-id=<%= process.env.PAYPAL_CLIENT_ID %>&currency=SGD"></script>
</head>

<body>
  <%- include('partials/navbar') %>

    <main class="container my-5">
      <div class="row">
        <div class="col-12">
          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <h3 class="card-title mb-3">Fines for <%= user && user.name ? user.name : 'User' %>
              </h3>

              <% const outstandingFines=(fines || []).filter(f=> !f.paid);
                const paidFines = (fines || []).filter(f => f.paid);
                %>

                <% if (outstandingFines.length) { %>
                  <h5 class="mb-2">Outstanding Fines</h5>
                  <div class="row">
                    <div class="col-lg-8">
                      <div class="table-responsive">
                        <table class="table table-striped align-middle" id="finesTable">
                          <thead>
                            <tr>
                              <th>Fine Type</th>
                              <th>Description</th>
                              <th class="text-end">Amount</th>
                              <th class="text-center">Paid</th>
                              <th></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% outstandingFines.forEach(f=> {
                              const inCart = cart && cart.includes(f.fineId);
                              %>
                              <tr data-id="<%= f.fineId %>" data-amount="<%= Number(f.amount).toFixed(2) %>"
                                data-desc="<%= f.description %>">
                                <td>
                                  <%= f.typeName || '-' %>
                                </td>
                                <td>
                                  <%= f.description || '-' %>
                                </td>
                                <td class="text-end">
                                  <%= (typeof f.amount !=='undefined' && f.amount !==null) ? Number(f.amount).toFixed(2)
                                    : '0.00' %>
                                </td>
                                <td class="text-center">No</td>
                                <td class="text-end">
                                  <form action="/cart/add" method="POST" style="display:inline;">
                                    <input type="hidden" name="fineId" value="<%= f.fineId %>">
                                    <button type="submit" class="btn btn-primary">Add to cart</button>
                                  </form>
                                </td>
                              </tr>
                              <% }) %>
                          </tbody>
                        </table>
                      </div>
                    </div>

                    <div class="col-lg-4">
                      <div class="card border-start-4 border-primary">
                        <div class="card-body">
                          <h5 class="card-title">Payment Cart</h5>

                          <div id="cartEmptyMsg" class="text-muted mb-3">
                            <%= (!cart || !cart.length) ? 'No fines in cart.' : '' %>
                          </div>

                          <ul class="list-group mb-3" id="cartList" style="max-height:300px; overflow:auto">
                            <% if (cart && cart.length) { const lookup=(fines || []).reduce((m, f)=> (m[f.fineId] = f,
                              m), {});
                              cart.forEach(fid => {
                              const item = lookup[fid];
                              %>
                              <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="me-2">
                                  <div class="fw-semibold">
                                    <%= item ? item.description : ('Fine ' + fid) %></div>
                              <small class="text-muted">ID: <%= fid %></small>
                            </div>
                            <div class="text-end">
                              <div class="fw-bold"><%= item ? Number(item.amount).toFixed(2) : ' 0.00' %>
                                  </div>
                                  <div class="mt-1"><button type="button"
                                      class="btn btn-sm btn-outline-danger remove-btn"
                                      data-id="<%= fid %>">Remove</button></div>
                                </div>
                              </li>
                              <% }); } %>
                          </ul>

                          <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>Total:</div>
                            <div id="cartTotal" class="fw-bold">
                              <%= (cart && cart.length) ? cart.reduce((sum, id)=> {
                                const it = fines.find(f=>f.fineId===id);
                                return sum + (it ? Number(it.amount) : 0);
                                }, 0).toFixed(2) : '0.00' %>
                            </div>
                          </div>

                          <div class="d-flex gap-2">
                            <button id="clearCartBtn" class="btn btn-outline-danger btn-sm" <%=(cart && cart.length)
                              ? '' : 'disabled' %>>Clear cart</button>
                            <form id="payForm" method="post" action="/fines/pay" class="m-0 p-0">
                              <% if (cart && cart.length) { cart.forEach(fid=> { %>
                                <input type="hidden" name="fineIds[]" value="<%= fid %>">
                                <% }) } %>
                                  <!-- <button id="payBtn" type="submit" class="btn btn-success btn-sm" <%= (cart && cart.length) ? '' : 'disabled' %>>Proceed to payment</button> -->
                            </form>
                          </div> <br>
                          
                          <!-- PayPal related code -->
                          <div id="paypal-button-container"></div>
                          <script>
                            // Make the cart array available in JS
                            const cart = <%- JSON.stringify(cart || []) %>;
                            const amount = document.getElementById('cartTotal').innerText;

                            function renderPaypalButtons() {
                              paypal.Buttons({
                                createOrder: function (data, actions) {
                                  return fetch('/api/paypal/create-order', {
                                    method: 'post',
                                    headers: {
                                      'content-type': 'application/json'
                                    },
                                    body: JSON.stringify({ amount })
                                  })
                                    .then(res => res.json())
                                    .then(data => data.id);
                                },
                                onApprove: function (data, actions) {
                                  return fetch('/api/paypal/capture-order', {
                                    method: 'post',
                                    headers: {
                                      'content-type': 'application/json'
                                    },
                                    body: JSON.stringify({ orderID: data.orderID, fineIds: cart })
                                  })
                                    .then(res => res.json())
                                    .then(details => {
                                      if (details.status === "COMPLETED" || details.success) {
                                        // Redirect to invoice page after successful payment
                                        window.location.href = "/invoice?fines=" + cart.join(",");
                                      } else {
                                        alert('Payment not completed.');
                                      }
                                    });
                                },
                                onClick: function (data, actions) {
                                  if (!cart.length) {
                                    alert('Your cart is empty. Please add fines to cart before paying.');
                                    return actions.reject();
                                  }
                                  return actions.resolve();
                                }
                              }).render('#paypal-button-container');
                            }

                            if (cart.length) {
                              renderPaypalButtons();
                            } else {
                              document.getElementById('paypal-button-container').style.display = 'none';
                            }
                          </script>
                          <!-- PayPal related code -->

                        </div>
                      </div>
                    </div>
                  </div>
                  <% } else { %>
                    <div class="alert alert-success mb-4">No outstanding fines for this user.</div>
                    <% } %>

                      <% if (paidFines.length) { %>
                        <h5 class="mt-4 mb-2">Paid Fines</h5>
                        <div class="table-responsive">
                          <table class="table table-striped align-middle">
                            <thead>
                              <tr>
                                <th>Fine Type</th>
                                <th>Description</th>
                                <th class="text-end">Amount</th>
                                <th class="text-center">Paid</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% paidFines.forEach(f=> { %>
                                <tr>
                                  <td>
                                    <%= f.typeName || '-' %>
                                  </td>
                                  <td>
                                    <%= f.description || '-' %>
                                  </td>
                                  <td class="text-end">
                                    <%= (typeof f.amount !=='undefined' && f.amount !==null) ?
                                      Number(f.amount).toFixed(2) : '0.00' %>
                                  </td>
                                  <td class="text-center">Yes</td>
                                </tr>
                                <% }) %>
                            </tbody>
                          </table>
                        </div>
                        <% } %>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
      <script>
        (function () {
          const table = document.getElementById('finesTable');
          const cartList = document.getElementById('cartList');
          const cartEmptyMsg = document.getElementById('cartEmptyMsg');
          const clearCartBtn = document.getElementById('clearCartBtn');

          // helper POST - include credentials so session cookie is sent
          async function postJson(url, body) {
            const res = await fetch(url, {
              method: 'POST',
              credentials: 'same-origin',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(body)
            });
            if (!res.ok) {
              let err = { message: 'Network error' };
              try { err = await res.json(); } catch (e) { }
              throw err;
            }
            return res.json();
          }

          // add single fine to cart
          table && table.querySelectorAll('.add-single-btn').forEach(b => {
            b.addEventListener('click', async (e) => {
              const id = e.currentTarget.dataset.id;
              try {
                const r = await postJson('/cart/add', { fineId: id });
                if (r.success) location.reload();
                else alert(r.message || 'Could not add to cart');
              } catch (err) {
                console.error(err);
                alert(err.message || 'Could not add to cart');
              }
            });
          });

          // remove single fine from cart (button in table)
          table && table.querySelectorAll('.remove-single-btn').forEach(b => {
            b.addEventListener('click', async (e) => {
              const id = e.currentTarget.dataset.id;
              try {
                const r = await postJson('/cart/remove', { fineId: id });
                if (r.success) location.reload();
                else alert(r.message || 'Could not remove from cart');
              } catch (err) {
                console.error(err);
                alert(err.message || 'Could not remove from cart');
              }
            });
          });

          // remove from cart (cart pane)
          cartList && cartList.querySelectorAll('.remove-btn').forEach(b => {
            b.addEventListener('click', async (e) => {
              const id = e.currentTarget.dataset.id;
              try {
                const r = await postJson('/cart/remove', { fineId: id });
                if (r.success) location.reload();
                else alert(r.message || 'Could not remove item');
              } catch (err) {
                console.error(err);
                alert(err.message || 'Could not remove item');
              }
            });
          });

          // clear cart
          clearCartBtn && clearCartBtn.addEventListener('click', async () => {
            if (!confirm('Clear all fines from your cart?')) return;
            try {
              const r = await postJson('/cart/clear', {});
              if (r.success) location.reload();
              else alert(r.message || 'Could not clear cart');
            } catch (err) {
              console.error(err);
              alert(err.message || 'Could not clear cart');
            }
          });

        })();
      </script>

</body>

</html>