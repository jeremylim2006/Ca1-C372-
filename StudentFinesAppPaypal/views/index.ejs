<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Student Fines App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>
<body>
<%- include('partials/navbar') %>



  <main class="container my-5">
    <% const flashSuccess = (typeof success !== 'undefined' && success.length) ? success : (locals && locals.success) || []; %>
    <% const flashError = (typeof errors !== 'undefined' && errors.length) ? errors : (locals && locals.error) || []; %>

    <% if (flashSuccess && flashSuccess.length) { %>
      <div class="alert alert-success">
        <% flashSuccess.forEach(m => { %><div><%= m %></div><% }) %>
      </div>
    <% } %>

    <% if (flashError && flashError.length) { %>
      <div class="alert alert-danger">
        <% flashError.forEach(m => { %><div><%= m %></div><% }) %>
      </div>
    <% } %>
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">

        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <% if (session && session.user) { %>
              <h2 class="card-title">Welcome back, <%= session.user.name %> ðŸ‘‹</h2>
              <p class="text-muted mb-0">You are logged in. View your outstanding fines or manage your profile.</p>
            <% } else { %>
              <h2 class="card-title">Welcome to User App</h2>
              <p class="text-muted">Please <a href="/login" class="link-primary">log in</a> to view your outstanding fines.</p>
              <div class="mt-3">
                <a href="/login" class="btn btn-primary">Login</a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>

<%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
